mixin button(options)
  - var b = 'button'
  -
    var {
      theme,
      caption,
      href = '/change=me',
      isHovered,
      isFluid,
      isSmall,
      withArrow
    } = options || {}

  - var blockModifiers = [theme]

  if isHovered
    - blockModifiers.push('hovered')
  if isFluid
    - blockModifiers.push('fluid')
  if isSmall
    - blockModifiers.push('small')
  if withArrow
    - blockModifiers.push('with-arrow')

  - var f = require('../../js/functions')

  a(class=f.bem({b, m: blockModifiers}) href=href)
    div(class=f.bem({b, e: 'inner'}))
      span(class=f.bem({b, e: 'caption'}))= caption
      i(class=[...f.bem({b, e: 'arrow'}), 'material-icons'])= 'arrow_forward'