include ../../input/input
include ../../button/button

mixin sign-in()
  - const b = 'sign-in'
  form(class=[b, 'card'])
    h1(class=[`${b}__title`, 'h1'])= 'Войти'
    div(class=`${b}__input`)
      +input({
        id: 'sign-in_email',
        placeholder: 'Email',
        type: 'email'
      })
    div(class=`${b}__input`)
      +input({
        id: 'sign-in_pass',
        placeholder: 'Пароль',
        type: 'password'
      })
    div(class=`${b}__login-button`)
      +button({
        theme: 'default',
        caption: 'Войти',
        withArrow: true,
        isFluid: true,
        href: 'login.html'
      })
    div(class=`${b}__create-account`)
      p(class=`${b}__hint`)= 'Нет аккаунта на Toxin?'
      div(class=`${b}__create-button`)
        +button({
          theme: 'transparent',
          caption: 'Создать',
          isFluid: true,
          href: 'registration.html'
        })