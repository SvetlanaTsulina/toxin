include ../../input/input
include ../../radio-button/radio-button
include ../../toggle-button/toggle-button

mixin sign-up()
  form.card.sign-up
    h1.sign-up__title.h1= 'Регистрация аккаунта'
    div.sign-up__input
      +input({
        id: 'first-name',
        placeholder: 'Имя'
      })
    div.sign-up__input
      +input({
        id: 'last-name',
        placeholder: 'Фамилия'
      })
    div.sign-up__gender
      div.sign-up__radio-button
        +radio-button({
          id: 'g-male',
          name: 'gender',
          value: 'm',
          label: 'Мужчина',
          isChecked: true
        })
      div.sign-up__radio-button
        +radio-button({
          id: 'g-female',
          name: 'gender',
          value: 'f',
          label: 'Женщина'
        })
    div.sign-up__birthday
      div.sign-up__label
        +label({
          label: 'Дата рождения'
        })
      div.sign-up__input
        +input({
          id: 'sign-up__input-birthday',
          placeholder: 'ДД.ММ.ГГГГ'
        })
    div.sign-up__email
      div.sign-up__label
        +label({
          label: 'Данные для входа в сервис'
        })
      div.sign-up__input
        +input({
          id: 'sign-up__input-email',
          placeholder: 'Email',
          type: 'email'
        })
    div.sign-up__input
      +input({
        id: 'sign-up__input-password',
        placeholder: 'Пароль',
        type: 'password'
      })
    div.sign-up__toggle
      +toggle-button({
        id: 'sign-up__toggle-promote',
        label: 'Получать спецпредложения'
      })
    div.sign-up__pay-button
      +button({
        theme: 'default',
        caption: 'Перейти к оплате',
        withArrow: true,
        isFluid: true
      })
    div.sign-up__auth
      p.sign-up__auth-hint= 'Уже есть аккаунт на Toxin'
      div.sign-up__auth-button
        +button({
          theme: 'transparent',
          caption: 'Войти',
          isFluid: true,
          href: 'login.html'
        })
