include ../label/label
include ../dropdown/dropdown

mixin dropdown-date-range(options)
  - const b = 'dropdown-date-range'
  - const mask = 'ДД.ММ.ГГГГ'
  -
    const {
      id,
      fromLabel = 'Прибытие',
      from = mask,
      toLabel = 'Выезд',
      to = mask
    } = options || {}

  div(class=b)
    div(class=`${b}__from`)
      div(class=`${b}__label`)
        +label({
          label: fromLabel
        })
      div(class=`${b}__dropdown`)
        +dropdown({
          id: `${id}__from-date`,
          value: from
        })
    div(class=`${b}__to`)
      div(class=`${b}__label`)
        +label({
          label: toLabel
        })
      div(class=`${b}__dropdown`)
        +dropdown({
          id: `${id}__to-date`,
          value: to
        })