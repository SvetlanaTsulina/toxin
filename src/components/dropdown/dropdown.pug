include ../label/label
include ../button/button
include ./select-box

mixin dropdown(options)
  -
    var {
      id,
      value = 'Выберите',
      zIndex = 9,
      rows = [],
      isExpanded,
      isEdited,
      isEmpty
    } = options || {}

  - var blockModifiers = []

  if isExpanded
    - blockModifiers.push('expanded')
  if isEdited
    - blockModifiers.push('edited')
  if isEmpty
    - blockModifiers.push('empty')

  - var f = require('../../js/functions.js')
  - var js = 'js'

  div(id=id class=f.bem({
    b: 'dropdown',
    m: blockModifiers,
    js
  }))
    label(class=f.bem({
      b: 'dropdown',
      e: 'toggle',
      js
    }))
      span.dropdown__text= value
      i.material-icons= 'keyboard_arrow_down'
      input.dropdown__data-input(type='text' value=value)
    if rows.length > 0
      +select-box(options)