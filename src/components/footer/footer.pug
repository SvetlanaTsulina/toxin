include menu-section/menu-section
include ../logo/logo
include ../form/input-text/input-text

mixin footer(options)
  - const blockName = 'footer'

  - let rightTitle = 'Subscribe&nbsp;to&nbsp;our&nbsp;newsletter'
  - let leftDescription = 'Lorem ipsum dolor sit amet consectetur adipiscing elit aliquam eget nullam pellentesque aliquam curabitur cociis.'
  - let rightDescription = 'Receive our latest news and promotions in your inbox!'
  - let rightPlaceholder = 'Your email address'
  - let copyright = 'Copyright Â© 2018 Toxin UI Kit. All rights reserved.'

  -
    let menus = [
      {
        title: 'Navigation',
        links: [
          {text: 'About Us', href: 'javascript:void(0)'},
          {text: 'News', href: 'javascript:void(0)'},
          {text: 'Support', href: 'javascript:void(0)'},
          {text: 'Products', href: 'javascript:void(0)'}
        ]
      },
      {
        title: 'About Us',
        links: [
          {text: 'Who we are', href: 'javascript:void(0)'},
          {text: 'Our team', href: 'javascript:void(0)'},
          {text: 'Careers', href: 'javascript:void(0)'},
          {text: 'Investors', href: 'javascript:void(0)'}
        ]
      },
      {
        title: 'Support',
        links: [
          {text: 'Documentation', href: 'javascript:void(0)'},
          {text: 'Community', href: 'javascript:void(0)'},
          {text: 'Get in Touch', href: 'javascript:void(0)'}
        ]
      }
    ]

  - let modifiers = []

  if options
    if options.menus
      - menus = options.menus
    if options.leftDescription
      - leftDescription = options.leftDescription
    if options.rightDescription
      - rightDescription = options.rightDescription
    if options.rightTitle
      - rightTitle = options.rightTitle
    if options.rightPlaceholder
      - rightPlaceholder = options.rightPlaceholder
    if options.copyright
      - copyright = options.copyright
    if options.theme
      - modifiers.push(blockName+'--'+options.theme)


  footer(class=blockName class=modifiers)
    div(class=[blockName+'__inner', 'clearfix'])
      div(class=[blockName+'__top', 'clearfix'])
        div(class=blockName+'__left')
          div(class=blockName + '__logo')
            +logo(null, true)
          div(class=[blockName + '__description', 'body'])
            = leftDescription
          div(class=blockName+'__social--creative')
            a(class=[blockName + '__icon', blockName + '__icon--tw'] href='javascript:void(0);')
            a(class=[blockName + '__icon', blockName + '__icon--fb'] href='javascript:void(0);')
            a(class=[blockName + '__icon', blockName + '__icon--ig'] href='javascript:void(0);')
        div(class=blockName+'__center')
          nav(class=blockName + '__nav')
            each section, _ in menus
              div(class=blockName + '__nav-menu')
                +menu-section(section.title, section.links)
        div(class=blockName+'__right')
          h3(class=[blockName+'__subscribe-title', 'h3'])!= rightTitle
          p(class=[blockName+'__subscribe-description', 'body'])
            = rightDescription
          div(class=blockName+'__subscribe-input')
            +input-text(
              'subscribe',
              rightPlaceholder,
              '',
              {withButton: true}
            )
      div(class=[blockName+'__bottom', 'clearfix'])
        p(class=[blockName+'__copyright', 'body'])= copyright
        div(class=blockName+'__social')
          a(class=[blockName+'__icon', blockName+'__icon--ig'] href='/change-me')
          a(class=[blockName + '__icon', blockName + '__icon--fb'] href='/change-me')
          a(class=[blockName+'__icon', blockName+'__icon--tw'] href='/change-me')
    div(class=blockName+'__hr')