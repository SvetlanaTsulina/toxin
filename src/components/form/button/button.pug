mixin button(theme, caption, options)
  - var blockName = 'button'
  - var modifiers = [blockName + '--' + theme]
  - var href = 'javascript:void(0);'
  - var withArrow = false
  - var attributes = {}

  if options
    if options.hover
      - modifiers.push(blockName + '--hovered')
    if options.href
      - href = options.href
    if options.withArrow
      - withArrow = options.withArrow
    if options.attributes
      - attributes = options.attributes

  a(class=blockName class=modifiers href=href)&attributes(attributes)
    if theme === 'textual'
      = caption
    else
      div(class=blockName+'__cell')
        span(class=blockName+'__caption')= caption
        if withArrow
          i(class=[blockName+'__arrow', 'material-icons'])= 'arrow_forward'