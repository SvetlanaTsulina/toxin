include label/label

mixin input-select-group(options)
  - var thisModifiers = []
  - var selectOptions = []
  if options.modifiers
    - thisModifiers=options.modifiers.this
  if options.options
    - selectOptions = options.options
  div(class='input-select-group' class=thisModifiers)
    +label(options.llabel, options.rlabel, options.id)
    select(class='input-select-group__select' id=options.id)
      each val in selectOptions
        option= val