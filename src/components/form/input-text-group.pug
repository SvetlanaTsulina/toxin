mixin input-text-group(options)
  - var thisModifiers = []
  - var inputModifiers = []
  if options.modifiers
    - thisModifiers = options.modifiers.this
    - inputModifiers = options.modifiers.input
  div(class='input-text-group' class=thisModifiers)
    label(for=options.id)
      span(class=['input-text-group-llabel'])= options.llabel
      span(class=['input-text-group-rlabel'])= options.rlabel
      div.clearfix
    input(class='input-text' class=inputModifiers id=options.id placeholder=options.placeholder value=options.value)