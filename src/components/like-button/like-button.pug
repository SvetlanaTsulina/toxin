mixin like-button(options)
  - var { count = 0, isFavorite } = options || {}

  - var blockModifiers = []

  if isFavorite
    - blockModifiers.push('favorite')

  - var f = require('../../js/functions')

  i(class=f.bem({
    b: 'like-button',
    m: blockModifiers
  }))
    i.like-button__heart.material-icons= isFavorite ? 'favorite' : 'favorite_border'
    span.like-button__counter= count