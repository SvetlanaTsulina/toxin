mixin like-button(options)
  - const b = 'like-button'
  -
    const {
      count = 0,
      isFavorite
    } = options || {}

  - var blockModifiers = []

  if isFavorite
    - blockModifiers.push(`${b}--favorite`)

  i(class=b class=blockModifiers)
    i(class=[`${b}__heart`, 'material-icons'])= isFavorite ? 'favorite' : 'favorite_border'
    span(class=`${b}__counter`)= count