mixin text-input(options)
  -
    var {
      id,
      type = 'text',
      placeholder,
      value,
      withArrow,
      isHovered
    } = options || {}

  - var blockModifiers = []

  if withArrow
    - blockModifiers.push('with-arrow')
  if isHovered
    - blockModifiers.push('hovered')

  - var f = require('../../utils/functions')

  div(class=f.bem({
    b: 'text-input',
    m: blockModifiers
  }))
    input.text-input__input(id=id type=type placeholder=placeholder value=value)
    button.text-input__submit-button
      span.text-input__arrow.material-icons= 'arrow_forward'