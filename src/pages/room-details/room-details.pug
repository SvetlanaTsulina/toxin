extends ../layout/layout
include ../../components/form/feature/feature
include ../../components/form/feedback/feedback
include ../../components/form/bullet-list/bullet-list
include ../../components/card/room-book/room-book
include ../../components/votes-chart/votes-chart

block vars
  - var title = 'Room details'
  - var bodyClasses = ['room-details', 'clearfix']
  - var withoutLogo = true
  - var footerTheme = 'bordered'

block main
  .room-details__feature-images
    .room-details__left-image
    .room-details__top-image
    .room-details__bottom-image
  .room-details__content.clearfix
    .room-details__main
      .room-details__info
        h2.h2= 'Сведения о номере'
        .room-details__features
          .room-details__feature
            +feature(
              'mood',
              'Комфорт',
              'Шумопоглощающие стены'
            )
          .room-details__feature
            +feature(
              'location_city',
              'Удобство',
              'Окно в каждой из спален'
            )
          .room-details__feature
            +feature(
              'whatshot',
              'Уют',
              'Номер оснащен камином'
            )
      .room-details__rate
        h2.h2= 'Впечатления от номера'
        .room-details__votes-chart
          +votes-chart(
            'votes-chart',
            [
              { label: 'perfect', count: 520 },
              { label: 'good', count: 261 },
              { label: 'satisfactorily', count: 260 },
            ]
          )
      .room-details__feedbacks
        h2.room-details__feedbacks-title.h2= 'Отзывы посетителей номера'
        span.room-details__feedbacks-counter.body
          = '2 отзыва'
        .room-details__feedback
          +feedback(
            'Мурад Сарафанов',
            '5 дней назад',
            'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И&nbsp;стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
            {favCount: 12, fav: true, image: 'murad.png'}
          )
        .room-details__feedback
          +feedback(
            'Патриция Стёклышкова',
            'Неделю назад',
            'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент',
            {favCount: 2, image: 'patricia.png'}
          )
      .room-details__rules
        h2.room-details__rules-title.h2= 'Правила'
        .room-details__bullet-list
          +bullet-list(
            'bullet-list',
            {
              data: [
                {text: 'Нельзя с питомцами'},
                {text: 'Без вечеринок и мероприятий'},
                {text: 'Время прибытия &mdash; после 13:00, а выезд до 12:00'}
              ]
            }
          )
      .room-details__cancel
        h2.room-details__cancel-title.h2= 'Отмена'
        .room-details__cancel-text.body
          = 'Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.'
    .room-details__right
      .room-details__book-form
        +room-book(
          888,
          9990,
          2179,
          300,
          {feature: 'люкс'}
        )
