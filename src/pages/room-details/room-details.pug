extends ../layout/layout

include ../../components/form/feature/feature
include ../../components/form/feedback/feedback
include ../../components/bullet-list/bullet-list
include ../../components/card/room-book/room-book
include ../../components/votes-chart/votes-chart

block vars
  - const title = 'Room details'
  - const footerTheme = 'bordered'

block main
  article.room-details
    figure(role="group").room-details__feature-images
      figure.room-details__left-image
      figure.room-details__top-image
      figure.room-details__bottom-image
    .room-details__content.clearfix
      .room-details__main
        section.room-details__info
          h2.h2= 'Сведения о номере'
          .room-details__features
            article.room-details__feature
              +feature(
                'mood',
                'Комфорт',
                'Шумопоглощающие стены'
              )
            article.room-details__feature
              +feature(
                'location_city',
                'Удобство',
                'Окно в каждой из спален'
              )
            article.room-details__feature
              +feature(
                'whatshot',
                'Уют',
                'Номер оснащен камином'
              )
        section.room-details__rate
          h2.h2= 'Впечатления от номера'
          .room-details__votes-chart
            +votes-chart(
              'votes-chart',
              [
                { label: 'perfect', count: 520 },
                { label: 'good', count: 261 },
                { label: 'satisfactorily', count: 260 },
              ]
            )
        section.room-details__feedbacks
          h2.room-details__feedbacks-title.h2= 'Отзывы посетителей номера'
          span.room-details__feedbacks-counter.body
            = '2 отзыва'
          article.room-details__feedback
            +feedback({
              author: 'Мурад Сарафанов',
              date: '5 дней назад',
              text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И&nbsp;стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
              favCount: 12,
              isFavorite: true,
              image: {
                src: 'murad.png',
                alt: 'Фото автора'
              }
            })
          article.room-details__feedback
            +feedback({
              author: 'Патриция Стёклышкова',
              date: 'Неделю назад',
              text: 'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент',
              favCount: 2,
              image: {
                src: 'patricia.png',
                alt: 'Фото автора'
              }
            })
        section.room-details__rules
          h2.room-details__rules-title.h2= 'Правила'
          .room-details__bullet-list
            +bullet-list({
              id: 'bullet-list',
              items: [
                {text: 'Нельзя с питомцами'},
                {text: 'Без вечеринок и мероприятий'},
                {text: 'Время прибытия &mdash; после 13:00, а выезд до 12:00'}
              ]
            })
        section.room-details__cancel
          h2.room-details__cancel-title.h2= 'Отмена'
          p.room-details__cancel-text.body
            = 'Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.'
      .room-details__right
        section.room-details__book-form
          +room-book({
            roomNumber: 888,
            pricePerDay: 9990,
            discount: 2179,
            fee: 300,
            feature: 'люкс'
          })
