extends ../layouts/page

include ../../components/feature/feature
include ../../components/feedback/feedback
include ../../components/bullet-list/bullet-list
include ../../components/card/room-book/room-book
include ../../components/votes-chart/votes-chart

block vars
  - var title = 'Room details'

block main
  article.room-details
    figure.room-details__feature-images
      img.room-details__feature-image(src=require('./img/room-details-left.png'))
      img.room-details__feature-image(src=require('./img/room-details-top.png'))
      img.room-details__feature-image(src=require('./img/room-details-bottom.png'))
    .room-details__inner
      .room-details__main
        section.room-details__info
          h2.h2= 'Сведения о номере'
          .room-details__features
            article.room-details__feature
              +feature({
                icon: 'mood',
                title: 'Комфорт',
                hint: 'Шумопоглощающие стены'
              })
            article.room-details__feature
              +feature({
                icon: 'location_city',
                title: 'Удобство',
                hint: 'Окно в каждой из спален'
              })
            article.room-details__feature
              +feature({
                icon: 'whatshot',
                title: 'Уют',
                hint: 'Номер оснащен камином'
              })
        section.room-details__rate
          h2.room-details__rate-title.h2= 'Впечатления от номера'
          .room-details__votes-chart
            +votes-chart('votes-chart')
        section.room-details__feedbacks
          .room-details__feedbacks-header
            h2.room-details__feedbacks-title.h2= 'Отзывы посетителей номера'
            span.room-details__feedbacks-counter.body= '2 отзыва'
          .room-details__feedback
            +feedback({
              author: {
                name: 'Мурад Сарафанов',
                image: {
                  src: 'murad.png',
                  alt: 'Фото автора'
                }
              },
              date: '5 дней назад',
              text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И&nbsp;стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
              favoritesCount: 12,
              isFavorite: true,
            })
          .room-details__feedback
            +feedback({
              author: {
                name: 'Патриция Стёклышкова',
                image: {
                  src: 'patricia.png',
                  alt: 'Фото автора'
                }
              },
              date: 'Неделю назад',
              text: 'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент',
              favoritesCount: 2,
            })
        section.room-details__rules
          h2.room-details__rules-title.h2= 'Правила'
          .room-details__bullet-list
            +bullet-list({
              id: 'bullet-list',
              items: [
                {text: 'Нельзя с питомцами'},
                {text: 'Без вечеринок и мероприятий'},
                {text: 'Время прибытия &mdash; после 13:00, а выезд до 12:00'}
              ]
            })
        section.room-details__cancel
          h2.room-details__cancel-title.h2= 'Отмена'
          p.room-details__cancel-text.body
            = 'Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.'
      .room-details__sidebar
        section.room-details__book-form
          +room-book({
            roomNumber: 888,
            pricePerDay: 9990,
            discount: 2179,
            fee: 300,
            feature: 'люкс'
          })
