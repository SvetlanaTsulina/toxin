extends ../layout/layout

include ../../components/form/range-slider/range-slider
include ../../components/form/label/label
include ../../components/form/checkbox/checkbox
include ../../components/form/rich-checkbox/rich-checkbox
include ../../components/form/checkbox-list-xp/checkbox-list-xp

block vars
  - var title = 'Search room/Filter'
  - var bodyClasses = ['search-room-filter', 'clearfix']
  - var withoutLogo = true

block main
  .search-room-filter__content.clearfix
    .column.column--3.search-room-filter__sidebar
      .search-room-filter__date-dropdown-group
        .search-room-filter__date-dropdown-label
          +label(
            'Даты пребывания в отеле',
            null,
            'date-dropdown'
          )
        .search-room-filter__date-dropdown
          +dropdown(
            'date-dropdown',
            {value: '19 авг. - 23 авг.'}
          )
      .search-room-filter__guests-dropdown-group
        .search-room-filter__guests-dropdown-label
          +label(
            'Гости',
            null,
            'guests-dropdown'
          )
        .search-room-filter__guests-dropdown
          +dropdown(
            'guests-dropdown',
            {
              type: 'select-box',
              value: '3 гостя, 1 младенец',
              data: [
                {count: 2, text: 'взрослые', name: 'adult'},
                {count: 0, text: 'дети', name: 'kids'},
                {count: 1, text: 'младенцы', name: 'baby'}
              ]
            }
          )
      .search-room-filter__price-slider
        +range-slider({
          caption: 'Диапазон цены',
          name: 'price-slider'
        })
      p.search-room-filter__price-slider-hint
        = 'Стоимость за сутки пребывания в номере'
      .search-room-filter__checkbox-group
        .checkbox-group__label
          +label('checkbox buttons')
        .checkbox-group__checkbox
          +checkbox(
            'smoke-allowed',
            'Можно курить'
          )
        .checkbox-group__checkbox
          +checkbox(
            'pets-allowed',
            'Можно с питомцами',
            true
          )
        .checkbox-group__checkbox
          +checkbox(
            'guests-allowed',
            'Можно пригласить гостей (до 10 человек)',
            true
          )
      .search-room-filter__rich-checkbox-group
        .rich-checkbox-group__label
          +label('Доступность')
        .rich-checkbox-group__rich-checkbox.clearfix
          +rich-checkbox(
            'wide-hall-checkbox',
            'Широкий коридор',
            'Ширина коридоров в номере не&nbsp;менее 91 см.'
          )
        .rich-checkbox-group__rich-checkbox.clearfix
          +rich-checkbox(
            'disable-assistant-checkbox',
            'Помощник для инвалидов',
            'На 1 этаже вас встретит специалист и проводит до номера.'
          )
      .search-room-filter__feature-dropdown-group
        .search-room-filter__feature-dropdown-label
          +label(
            'Удобства номера',
            null,
            'feature-dropdown'
          )
        .search-room-filter__feature-dropdown
          +dropdown(
            'feature-dropdown',
            {
              type: 'select-box',
              value: '2 спальни, 2 кровати...',
              data: [
                {count: 2, text: 'спальни', name: 'bedroom'},
                {count: 2, text: 'кровати', name: 'bed'},
                {count: 0, text: 'ванные комнаты', name: 'bathroom'}
              ]
            }
          )
        .search-room-filter__additional-checkbox-list-xp-group
          +checkbox-list-xp(
            'additional',
            'Дополнительные удобства',
            {
              data: [
                {name: 'breakfast', label: 'Завтрак'},
                {name: 'table', label: 'Письменный стол', checked: true},
                {name: 'baby-chair-for-eat', label: 'Стул для кормления', checked: true},
                {name: 'baby-bed', label: 'Кроватка', checked: true},
                {name: 'tv_1', label: 'Телевизор'},
                {name: 'shampoo_1', label: 'Шампунь'},
                {name: 'tv_2', label: 'Телевизор'},
                {name: 'shampoo_2', label: 'Шампунь'}
              ]
            }
          )
    .column.column--9.search-room-filter__search-result
      h1.h1= 'Номера, которые мы для вас подобрали'