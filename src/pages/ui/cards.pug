    article.ui__room-search
      +room-search()
    article.ui__sign-up
      +sign-up()
  .column.column--4.second
    article.ui__room-book
      +room-book(
        888,
        9990,
        2179,
        300,
        {feature: 'люкс'}
      )
    article.ui__sign-in
      +sign-in()
  .column.column--4.third
    article.ui__datepicker-sample
      +datepicker()
    article.ui__room-thumb--vip
      +room-thumb(
        888,
        9990,
        145,
        5,
        [
          'room-thumb-1.png',
          'room-thumb-1.png',
          'room-thumb-1.png',
          'room-thumb-1.png'
        ],
        {
          feature:'люкс',
          focus: true
        }
      )
    article.ui__room-thumb
      +room-thumb(
        840,
        9900,
        65,
        4,
        [
          'room-thumb-2.png',
          'room-thumb-2.png',
