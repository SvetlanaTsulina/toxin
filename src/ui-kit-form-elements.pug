extends base

include components/logo/logo
include components/form/input-text-group
include components/form/input-select-group

block vars
  - title = 'UI Kit: Form elements'
block content
  .container.container_page-form-elements.clearfix
    +logo
    .col-4
      +input-text-group({
          'llabel': 'text field',
          'rlabel': 'default',
          'placeholder': 'Email',
          'id': 'input-email',
          'modifiers': {
              'this': [
                  'input-text-group_margin-standard'
              ]
          }
      })
      +input-text-group({
          'llabel': 'text field',
          'rlabel': 'hover / focus',
          'value': 'This is pretty awesome',
          'id': 'input-focused-hovered',
          'modifiers': {
              'this': [
                  'input-text-group_margin-standard'
              ],
              'inputText': [
                  'input-text-group__input_state-focus'
              ]
          }
      })
      +input-select-group({
          'llabel': 'dropdown',
          'rlabel': 'default',
          'id': 'default-dropdown',
          'modifiers': {
              'this': [
                  'input-select-group_margin-standard'
              ]
          },
          'options': ['Сколько гостей']
      })
      +input-text-group({
          'llabel': 'masked text field',
          'rlabel': 'default',
          'id': 'input-text-with-mask',
          'placeholder': 'ДД.ММ.ГГГГ',
          'modifiers': {
              'this': [
                  'input-select-group_margin-large'
              ]
          }
      })
      +input-select-group({
          'llabel': 'date dropdown',
          'options': ['ДД.ММ.ГГГГ'],
          'modifiers': {
              'this': [
                  'input-select-group_width-small'
              ]
          }
      })
      +input-select-group({
          'llabel': 'date dropdown',
          'options': [
              '19.08.2019'
          ],
          'modifiers': {
              'this': [
                  'input-select-group_width-small'
              ]
          }
      })
      div.clearfix.input-text-group_margin-large
      +input-select-group({
          'llabel': 'filter date dropdown',
          'options': ['19 авг - 23 авг'],
          'modifiers': {
              'this': [
                  'input-select-group_width-medium',
                  'input-select-group_margin-large'
              ]
          }
      })
      +input-text-group({
          'llabel': 'subscription text field',
          'id': 'input-text-submit',
          'placeholder': 'Email',
          'modifiers': {
              'this': [
                  'input-text-group_width-medium'
              ],
              'button': [
                  'input-text-group__input-submit_visible'
              ]
          }
      })
    .col-4
    .col-4