extends base

include components/logo/logo
include components/form/input-t-text/input-t-text
include components/form/dropdown/dropdown
include components/form/input-t-checkbox/input-t-checkbox
include components/form/radio-button/radio-button
include components/form/toggle-button/toggle-button
include components/form/label/label
include components/form/like-button/like-button
include components/form/rate-button/rate-button
include components/form/range-slider/range-slider
include components/form/button/button
include components/form/paginator/paginator

block vars
  - title = 'UI Kit: Form elements'
block content
  div.ui.ui--form-components.clearfix
    +logo
    div.ui__top.clearfix
      div.column.column--4.column--large-hpadding
        div.ui__input-t-text-group--default
          div.input-t-text-group
            div.input-t-text-group__label
              +label(
                'text field',
                'default'
              )
            div.input-t-text-group__input-t-text
              +input-t-text(
                'input-email',
                'Email'
              )
        div.ui__input-t-text-group--hovered
          div.input-t-text-group
            div.input-t-text-group__label
              +label(
                'text field',
                'hover / focus'
              )
            div.input-t-text-group__input-t-text
              +input-t-text(
                'input-focused-hovered',
                'Some text',
                'This is pretty awesome',
                {hovered: true}
              )
        div.ui__dropdown-group--default
          div.dropdown-group
            div.dropdown-group__label
              +label(
                'dropdown',
                'default'
              )
            div.dropdown-group__dropdown
              +dropdown(
                'default-dropdown',
                'Сколько гостей'
              )
        div.ui__input-t-text-group--masked
          div.input-t-text-group
            div.input-t-text-group__label
              +label(
                'masked text field',
                'default'
              )
            div.input-t-text-group__input-t-text
              +input-t-text(
                'input-text-with-mask',
                'ДД.ММ.ГГГГ'
              )
        div.ui__dropdown-group--inline.clearfix
          div.dropdown-group
            div.dropdown-group__label
              +label('date dropdown')
            div.dropdown-group__dropdown
              +dropdown(
                'date-from',
                'ДД.ММ.ГГГГ'
              )
          div.dropdown-group
            div.dropdown-group__label
              +label('date dropdown')
            div.dropdown-group__dropdown
              +dropdown(
                'date-to',
                '19.08.2019'
              )
        div.ui__dropdown-group--date-filter
          div.dropdown-group
            div.dropdown-group__label
              +label('filter date dropdown')
            div.dropdown-group__dropdown
              +dropdown(
                'date-filter',
                '19 авг - 23 авг'
              )
        div.ui__input-t-text-group--with-submit
          div.input-t-text-group
            div.input-t-text-group__label
              +label('subscription text field')
            div.input-t-text-group__input-t-text
              +input-t-text(
                'input-text-submit',
                'Email',
                '',
                {withButton: true}
              )
      div.column.column--4.column--large-hpadding
        div.ui__input-t-checkbox-group--default
          div.input-t-checkbox-group
            div.input-t-checkbox-group__label
              +label('checkbox buttons')
            div.input-t-checkbox-group__input-t-checkbox
              +input-t-checkbox(
                'smoke-allowed',
                'Можно курить'
              )
            div.input-t-checkbox-group__input-t-checkbox
              +input-t-checkbox(
                'pets-allowed',
                'Можно с питомцами',
                true
              )
            div.input-t-checkbox-group__input-t-checkbox
              +input-t-checkbox(
                'guests-allowed',
                'Можно пригласить гостей (до 10 человек)',
                true
              )
        div.ui__radio-group--default
          div.radio-button-group.clearfix
            div.radio-button-group__label
              +label('radio buttons')
            div.radio-button-group__radio-button
              +radio-button(
                'radio-male',
                'gender',
                'male',
                'Мужчина',
                true
              )
            div.radio-button-group__radio-button
              +radio-button(
                'radio-female',
                'gender',
                'female',
                'Женщина'
              )
        div.ui__toggle-group--default
          div.toggle-group
            div.toggle-group__label
              +label('toggle')
            div.toggle-group__toggle-button
              +toggle-button(
                'first-toggle',
                'Получать спецпредложения',
                true
              )
            div.toggle-group__toggle-button
              +toggle-button(
                'second-toggle',
                'Получать спецпредложения'
              )
        div.ui__like-button-group--default.clearfix
          div.like-button-group
            div.like-button-group__label
              +label('like button')
            div.like-button-group__like-button
              +like-button(2)
            div.like-button-group__like-button
              +like-button(12, true)
        div.ui__rate-button-group--default.clearfix
          div.rate-button-group
            div.rate-button-group__label
              +label('rate button')
            div.rate-button-group__rate-button
              +rate-button(
                'rate-first',
                5,
                4
              )
            div.rate-button-group__rate-button
              +rate-button(
                'rate-second',
                5,
                5
              )
      div.column.column--4.column--small-hpadding
        div.ui__range-slider--default
          +range-slider({
            'name': 'range-slider'
          })
        div.ui__button-group--default
          div.button-group
            div.button-group__label
              +label('buttons')
            div.button-group__button
              +button(
                'default',
                'click me'
              )
            div.button-group__button
              +button(
                'default',
                'click me',
                {hover: true}
              )
            div.button-group__button
              +button(
                'transparent',
                'click me'
              )
            div.button-group__button
              +button(
                'transparent',
                'click me',
                {hover: true}
              )
            div.button-group__button--textual
              +button(
                'textual',
                'click me'
              )
            div.button-group__button--textual
              +button(
                'textual',
                'click me',
                {hover: true}
              )
            div.button-group__button--large
              +button(
                'default',
                'перейти к оплате',
                {withArrow: true}
              )
        div.ui__paginator-group
          div.paginator-group
            div.paginator-group__label
              +label('pagination')
            div.paginator-group__paginator
              +paginator()
    div.ui__middle.clearfix
      div.column.column--4
        div.ui__dropdown-group--collapsed
          div.dropdown-group
            div.dropdown-group__label
              +label(
                'dropdown',
                'default'
              )
            div.dropdown-group__dropdown
              +dropdown(
                'dropdown-collapsed',
                '2 спальни, 2 кровати...'
              )
        div.ui__dropdown-group--expanded
          div.dropdown-group
            div.dropdown-group__label
              +label(
                'dropdown',
                'expanded'
              )
            div.dropdown-group__dropdown
              +dropdown(
                'dropdown-expanded',
                '2 спальни, 2 кровати...',
                {
                    type: 'json',
                    expanded: true,
                    items: {
                        bedroom: {
                            count: 2,
                            name: 'Спальни'
                        },
                        bed: {
                            count: 2,
                            name: 'Кровати'
                        },
                        bathroom: {
                            count: 0,
                            name: 'Ванные комнаты'
                        }
                    }
                }
              )
    div.column.column--4
    div.column.column--4