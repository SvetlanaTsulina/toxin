extends base

include components/logo/logo
include components/form/input-text-group
include components/form/input-select-group
include components/form/checkbox-group
include components/form/radio-group
include components/form/toggle-group
include components/form/label
include components/form/like-button
include components/form/rate-button
include components/form/range-slider
include components/form/button
include components/form/paginator

block vars
  - title = 'UI Kit: Form elements'
block content
  div.ui.ui--form-components.clearfix
    +logo
    div.column.column--4.column--large-hpadding
      div.ui__input-text-group--default
        +input-text-group({
          'llabel': 'text field',
          'rlabel': 'default',
          'placeholder': 'Email',
          'id': 'input-email'
        })
      div.ui__input-text-group--hovered
        +input-text-group({
          'llabel': 'text field',
          'rlabel': 'hover / focus',
          'value': 'This is pretty awesome',
          'id': 'input-focused-hovered',
          'modifiers': {
            'input': [
              'input-text-group__input-text--focused'
            ]
          }
        })
      div.ui__input-select-group--default
        +input-select-group({
          'llabel': 'dropdown',
          'rlabel': 'default',
          'id': 'default-dropdown',
          'options': ['Сколько гостей']
        })
      div.ui__input-text-group--masked
        +input-text-group({
          'llabel': 'masked text field',
          'rlabel': 'default',
          'id': 'input-text-with-mask',
          'placeholder': 'ДД.ММ.ГГГГ'
        })
      div.ui__input-select-group--inline.clearfix
        div.ui__input-select-group--small
          +input-select-group({
            'llabel': 'date dropdown',
            'options': ['ДД.ММ.ГГГГ']
          })
        div.ui__input-select-group--small
          +input-select-group({
            'llabel': 'date dropdown',
            'options': [
              '19.08.2019'
            ]
          })
      div.ui__input-select-group--date-filter
        +input-select-group({
          'llabel': 'filter date dropdown',
          'options': ['19 авг - 23 авг'],
        })
      div.ui__input-text-group--with-submit
        +input-text-group({
          'llabel': 'subscription text field',
          'id': 'input-text-submit',
          'placeholder': 'Email',
          'modifiers': {
            'button': [
              'input-text-group__input-submit--visible'
            ]
          }
        })
    div.column.column--4.column--large-hpadding
      div.ui__checkbox-group--default
        +checkbox-group({
          'label': 'checkbox buttons',
          'modifiers': {
            'label': ['label--mrgn-bttm-medium']
          },
          'options': {
            'smoke': {
              'label': 'Можно курить'
            },
            'pets': {
              'label': 'Можно с питомцами',
              'checked': true
            },
            'guests': {
              'label':'Можно пригласить гостей (до 10 человек)',
              'checked': true
            }
          }
        })
      div.ui__radio-group--default
        +radio-group({
          'label': 'radio buttons',
          'modifiers': {
            'label': ['label--mrgn-bttm-medium']
          },
          'name': 'gender',
          'options': {
            'male': {
              'label': 'Мужчина',
              'checked': true,
              'modifiers': ['radio-group__radio--mrgn-rght-small']
            },
            'female': {
              'label': 'Женщина'
            }
          }
        })
      div.ui__toggle-group--default
        +toggle-group({
          'label': 'toggle',
          'modifiers': {
            'label': ['label--mrgn-bttm-medium']
          },
          'options': {
            'active': {
              'label': 'Получать спецпредложения',
              'checked': true,
            },
            'default': {
              'label': 'Получать спецпредложения'
            }
          }
        })
      div.ui__like-button-group--default
        div.like-button-group
          +label({
            'llabel': 'like button',
            'modifiers': {
              'this': ['label--mrgn-bttm-medium']
            }
          })
          +like-button({
            'count': 2
          })
          +like-button({
            'count': 12,
            'favorite': true,
            'modifiers': {
                'this': ['like-button--sample']
            }
          })
      div.ui__rate-group--default
        +label({
          'llabel': 'rate button',
          'modifiers': {
              'this': ['label--mrgn-bttm-medium']
          }
        })
        +rate-button({
          'base': 5,
          'rate': 4,
          'name': 'rate-first',
          'modifiers': {
              'this': ['rate-button--first']
          }
        })
        +rate-button({
          'base': 5,
          'rate': 5,
          'name': 'rate-second'
        })
    div.column.column--4.column--small-hpadding
      div.ui__range-slider--default
        +range-slider({
          'name': 'range-slider'
        })
      div.ui__button-group--default
        div.button-group
          div.button-group__label
            +label({
              'llabel': 'buttons'
            })
          div.button-group__button
            +button({
              theme: 'default',
              caption: 'click me'
            })
          div.button-group__button
            +button({
              theme: 'default',
              caption: 'click me',
              hover: true
            })
          div.button-group__button
            +button({
              theme: 'transparent',
              caption: 'click me'
            })
          div.button-group__button
            +button({
              theme: 'transparent',
              caption: 'click me',
              hover: true
            })
          div.button-group__button--textual
            +button({
              theme: 'textual',
              caption: 'click me'
            })
          div.button-group__button--textual
            +button({
              theme: 'textual',
              caption: 'click me',
              hover: true
            })
          div.button-group__button--large
            +button({
              theme: 'default',
              arrow: true,
              caption: 'перейти к оплате'
            })
      div.ui__paginator-group
        div.paginator-group
          div.paginator-group__label
            +label({
              'llabel': 'pagination'
            })
          div.paginator-group__paginator
            +paginator()